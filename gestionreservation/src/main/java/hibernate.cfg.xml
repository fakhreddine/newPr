<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/greservation1</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
		
		

				<mapping class="gestionreservation.spring.model.Categorie" />
				<mapping class="gestionreservation.spring.model.Chambre" />
				<mapping class="gestionreservation.spring.model.Facture" />
				<mapping class="gestionreservation.spring.model.Hotel" />
				<mapping class="gestionreservation.spring.model.Offre" />
				<mapping class="gestionreservation.spring.model.Pension" />
				<mapping class="gestionreservation.spring.model.Personne" />
				<mapping class="gestionreservation.spring.model.Reservation" />
				<mapping class="gestionreservation.spring.model.Role" />
				<mapping class="gestionreservation.spring.model.Saison" />
				<mapping class="gestionreservation.spring.model.Serviceconsommation" />
				<mapping class="gestionreservation.spring.model.Typechambre" />
				<mapping class="gestionreservation.spring.model.Utilisateur" />
		
	</session-factory>
</hibernate-configuration>